

@model University.Models.Course;

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if (@Model.DepartmentCourseStudentEntity.Count == 0)
{
  <p>This course does not contain any students</p>
}
else
{
  <h4>Student the course contains:</h4>
  <ul>
  @foreach (var join in Model.DepartmentCourseStudentEntity)
    {
      <li>@join.Student.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Back to courses", "Index")</p>
<p>@Html.ActionLink("Edit Courses", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Courses", "Delete", new { id = Model.CourseId })</p>
